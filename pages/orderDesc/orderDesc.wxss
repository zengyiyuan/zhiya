/* pages/orderDesc/orderDesc.wxss */

video,
.mask{
  width: 100%;
  height: 450rpx;
  background-color: #f4f4f4;
}

.fixed {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 999;
  /* height: 225px; */
  background-color: #f4f4f4;
}

.mask image {
  width: 100%;
  height: 450rpx;
}

.mask button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  background-color: transparent;
  border-radius: 60rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

/* .desc image.avatar1 {
   background-image: url(../../image/avatar1.png);
} */

.nav {
  height: 90rpx;
  font-size: 33rpx;
}

.desc {
  margin-top: 540rpx;
  background-color: #fff;
  padding: 10rpx 30rpx;
}

.desc .cu-avatar {
  background-color: #fff;
}

.desc .avartar {
  position: relative;
  height: 128rpx;
  /* overflow: hidden; */
}

.desc .bgavatar, .desc .avatar1 {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.desc .avatar1 {
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: transparent;
  border-radius: 50%;
  z-index: 1;
}

.desc .cu-item {
  border: 1rpx solid #fff;
}

.pk {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 相关面约 */

.hot {
  /* margin-top: 120rpx; */
  background-color: #fff;
}

.face {
  margin-top: 18rpx;
}

.hot .title {
  padding: 30rpx;
  position: relative;
}

.hot .title text, .info .title {
  font-size: 18px;
  color: #333;
  font-weight: 700;
}

.hot .title .icon {
  position: absolute;
  right: 30rpx;
  color: #ddd;
  margin-top: 10rpx;
}

.cu-card.case .image .cu-tag {
  position: absolute;
  right: 20rpx;
  top: 0;
}

.cu-card.case .image .cu-bar {
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: right;
  background-color: transparent;
  word-wrap: normal;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot .image .cu-bar text {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  text-align: right;
}

.hot .cu-list.menu-avatar>.cu-item {
  padding-left: 0rpx;
  height: 110rpx;
  color: #000;
}

.hot .text-grey, .line-grey, .lines-grey {
  color: #000;
}

.hot .text-gray, .line-gray, .lines-gray {
  color: #8799a3;
}

.hot .image {
  border-radius: 20rpx;
  overflow: hidden;
}

.hot .cu-card>.cu-item {
  margin: 0rpx 30rpx;
  border-radius: 10rpx;
}

.info {
  /* padding: 0 30rpx; */
  background-color: #fff;
}

.info .title {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f6f6f6;
  border-bottom: 10rpx solid #f6f6f6;
}

.info .content {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 10rpx solid #f6f6f6;
}

.sTitle {
  padding-bottom: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.subcontent {
  /* text-overflow:-o-ellipsis-lastline; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.mysearch {
  position: fixed;
  top: none;
  bottom: 0;
  width: none;
}
.comment {
  margin-top: 540rpx;
}
.mystatu>text {
  padding-right: 13rpx;
}
.bottom {
  text-align: center;
  color: #bbb;
  padding: 30rpx;
}
